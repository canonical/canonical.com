<div class="p-navigation__dropdown is-full-width is-collapsed"
     data-level="1"
     id="{{ id }}"
     aria-hidden="true">
  <div class="p-navigation__dropdown-content-mobile">
    <ul class="p-list u-no-margin">
      <li class="p-navigation__item--dropdown-close" id="{{ id }}-content-back">
        <a class="p-navigation__link js-back" aria-controls="{{ id }}-content">Back</a>
      </li>
      {% if "side_nav_sections" in section %}
        {% for nav_section in section.side_nav_sections %}
          <li class="p-navigation__item--dropdown-toggle"
              id="{{ nav_section.title | slug }}-content">
            <a class="p-navigation__link"
               href="{{ nav_section.title | slug }}-menu"
               aria-controls="{{ nav_section.title | slug }}-menu">{{ nav_section.title }}</a>
            <ul class="p-navigation__dropdown"
                id="{{ nav_section.title | slug }}-menu"
                aria-hidden="true">
              <li class="p-navigation__item--dropdown-close"
                  id="{{ nav_section.title | slug }}-content-back">
                <a class="p-navigation__link js-back"
                   aria-controls="{{ nav_section.title | slug }}-content">Back</a>
              </li>
              {% for links_section in nav_section.primary_links %}
                {% if links_section.title %}
                  <li class="p-navigation--list-heading">
                    <h2 class="p-muted-heading">{{ links_section.title }}</h2>
                  </li>
                {% endif %}
                {% for link in links_section.links %}
                  {% with
                    url = link.url,
                    title = link.title,
                    description = link.description,
                    secondary_cta_url = link.secondary_cta_url,
                    secondary_cta_title = link.secondary_cta_title,
                    tabindex = "-1"
                    %}
                    {% include "navigation/_list-item.html" %}
                  {% endwith %}
                {% endfor %}
              {% endfor %}
              {% if nav_section.secondary_links %}
                {% for links_section in nav_section.secondary_links %}
                  <li class="p-navigation--list-heading">
                    <h2 class="p-muted-heading is-muted">{{ links_section.title }}</h2>
                  </li>
                  {% for link in links_section.links %}
                    <li>
                      <a class="p-navigation__link" href="{{ link.url }}">{{ link.title }}</a>
                    </li>
                  {% endfor %}
                {% endfor %}
              {% endif %}
            </ul>
          </li>
        {% endfor %}
      {% endif %}
      {% if section.cta and section.cta_link %}
        <li>
          <a class="p-navigation__link" href="{{ section.cta_link }}">{{ section.cta }}&rsaquo;</a>
        </li>
      {% endif %}
      {% if section.main_lists %}
        {% for main_list in section.main_lists %}
          <li class="p-navigation--list-heading">
            <h2 class="p-heading-muted">{{ main_list.title }}</h2>
          </li>
          {% for link in main_list.link_list %}
            <li>
              <a class="p-navigation__link" href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        {% endfor %}
      {% elif section.primary_links %}
        {% for link in section.primary_links.links %}
          <li>
            <a class="p-navigation__link" href="{{ link.url }}">{{ link.title }}</a>
          </li>
        {% endfor %}
      {% endif %}
      {% if section.secondary_links %}
        <li class="p-navigation--list-heading">
          <h2 class="p-heading-muted">{{ section.secondary_links.title }}</h2>
        </li>
        {% for link in section.secondary_links.links %}
          <li>
            <a class="p-navigation__link" href="{{ link.url }}">{{ link.title }}</a>
          </li>
        {% endfor %}
      {% elif section.highlighted_secondary_links %}
        <li class="p-navigation--list-heading">
          <h2 class="p-heading-muted">
            {{ section.highlighted_secondary_links.title }}
          </h2>
        </li>
        {% for link in section.highlighted_secondary_links.links %}
          <li>
            <a class="p-navigation__link" href="{{ link.url }}">{{ link.description }}</a>
          </li>
        {% endfor %}
      {% endif %}
    </ul>
  </div>
  <div class="p-navigation__dropdown-content">
    <div class="p-strip is-shallow">
      <div class="row">
        <div class="col-9">
          <p class="p-muted-heading">{{ title }}</p>
          <div class="row  u-no-margin u-no-padding">
            <div class="col-3">
              <ul class="p-list--divided">
                <li class="p-list__item">
                  {{ title }} 1
                  <br />
                  <small class="u-text--muted">Subtitle...</small>
                </li>
                <li class="p-list__item">
